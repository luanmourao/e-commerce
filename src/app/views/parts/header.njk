<header>

  <div class="container">

    <a href="/">
      <div class="logo">
        <h1>myE-Commerce</h1>
        <h2>Compra e Venda</h2>
      </div>
    </a>

    <form class="search" action="/products/search" method="get">
      <input 
        type="text" 
        name="filter" 
        placeholder="digite o nome do produto" 
        {%if search.term %}
          value="{{search.term}}"
        {% endif %}
      >
    </form>

    <nav class="primary">
      <ul>

        <li>
          <a href="/products/create">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a>
        </li>
        <li class="accounts">
          <a href="/accounts">
            <i class="material-icons">account_circle</i>
            Minha Conta
          </a>

          {% if session.userId %}
            <ul class="submenu">
              <li>
                <a href="/users">Configurações</a>
              </li>

              <li>
                <a href="/users/ads">Meus anúncios</a>
              </li>

              <li>
                <form action="/users/logout" method="POST">
                  <button>Sair</button>
                </form>
              </li>
            </ul>
          {% endif %}
        </li>
        
      </ul>
    </nav>

  </div>

</header>