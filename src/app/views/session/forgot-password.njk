{% extends "layout.njk" %}

{% block content %}
  <section class="password container form">
    <form action="/users/forgot-password" method="POST">

      <div class="header">
        <h3>Redefinição de senha</h3>
      </div>

      <div class="fields">
        <div class="item">
          <div>
            Digite seu e-mail cadastrado
          </div>

          <div class="input">
            <input 
              type="email" 
              name="email" 
              placeholder="exemplo@mail.com" 
              value="{{user.email}}"
              onblur="Validate.apply(this, 'isEmail')"
              required
            >
          </div>
        </div>
      </div>

      <button class="button" type="submit">Enviar</button>

    </form>
  </section>
{% endblock content %}