<div class="item">
    <div>
      E-mail
    </div>

    <div class="input">
      <input 
        type="email" 
        name="email" 
        placeholder="example@mail.com" 
        value="{{user.email}}"
        onblur="Validate.apply(this, 'isEmail')"
        required
      >
    </div>
</div>

<div class="item">
    <div>
      Digite sua NOVA senha
    </div>

    <div class="input">
      <input 
        type="password" 
        name="password" 
        required
      >
    </div>
</div>

<div class="item">
    <div>
      Repita a NOVA senha
    </div>

    <div class="input">
      <input 
        type="password" 
        name="passwordRepeat" 
        required
      >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">
