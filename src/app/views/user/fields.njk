<div class="item">
    <div>
      Nome Completo
    </div>

    <div class="input">
      <input 
        type="text" 
        name="name" 
        placeholder="digite seu nome completo" 
        value="{{user.name}}"
        required
      >
    </div>
</div>

<div class="item">
    <div>
      E-mail
    </div>

    <div class="input">
      <input 
        type="email" 
        name="email" 
        placeholder="digite email" 
        value="{{user.email}}"
        onblur="Validate.apply(this, 'isEmail')"
        required
      >
    </div>
</div>

<div class="item">
    <div>
      Senha
    </div>

    <div class="input">
      <input 
        type="password" 
        name="password" 
        {% if not user.id %}
          placeholder="digite sua senha" 
        {% else %}
          placeholder="digite sua senha para atualizar o cadastro" 
        {% endif %}
        required
      >
    </div>
</div>

{% if not user.id %}
  <div class="item">
    <div>
      Repita sua senha
    </div>

    <div class="input">
      <input 
        type="password" 
        name="passwordRepeat" 
        placeholder="repita a senha escolhida"
      >
    </div>
  </div>
{% endif %}

<div class="item">
    <div>
      CPF ou CNPJ
    </div>

    <div class="input">
      <input 
        type="text" 
        name="cpf_cnpj" 
        placeholder="digite o número do documento" 
        value="{{user.cpf_cnpj}}"
        onkeydown="Mask.apply(this, 'cpfCnpj')"
        onblur="Validate.apply(this, 'isCpfCnpj')"
        required
      >
    </div>
</div>

<div class="item">
    <div>
      CEP
    </div>

    <div class="input">
      <input 
        type="text" 
        name="cep" 
        placeholder="00000-000" 
        value="{{user.cep}}"
        onkeydown="Mask.apply(this, 'cep')"
        onblur="Validate.apply(this, 'isCep')"
        required
      >
    </div>
</div>

<div class="item">
    <div>
      Endereço Completo
    </div>

    <div class="input">
      <input 
        type="text" 
        name="address" 
        placeholder="digite seu endereço completo" 
        value="{{user.address}}"
        required
      >
    </div>
</div>

