{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
  
  {% call cards.render('Meus An√∫ncios', 'users-ads') %}
    <div class="items">
      {% for product in products %}
        <div class="item">
          <div
            class="image"
            style="background-image: url({{product.img}})"
          ></div>

          <div class="info">
            <div class="title">{{product.name}}</div>
            <div class="price">{{product.formattedPrice}}</div>
            <div class="published">Publicado em {{product.formattedCreatedAt}}</div>

            <div class="actions">
              <a href="/products/product/{{product.id}}">Ver</a>
              <a href="/products/product/{{product.id}}/edit">Editar</a>
            </div>
          </div>

        </div>
      {% endfor %}
    </div>
  {% endcall %}

{% endblock content %}